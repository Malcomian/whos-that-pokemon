<% include ./partials/navbar %>
<div class="container mt-4">
  <h1 class="mt-4 mb-4">Dashboard</h1>
  <div class="card card-body">
    <p class="lead mb-3">Welcome, <%= user.name %>!</p>
    <a href="/users/logout" class="poke btn btn-primary"> Logout</a>
    <br>
    <a href="/new" class="poke btn btn-primary">Create New Meme</a>
    <br>
    <div class="table-responsive">
      <table class="table table-striped">
        <thead class="thead-dark">
          <tr>
            <th>Name</th>
            <th>Image</th>
            <th>UUID</th>
            <th>Actions</th>
          </tr>
        </thead>
        <% for (let meme of memes) { %>
          <tr>
            <td><%= meme.text %></td>
            <td><img src="<%= meme.url %>" style="max-width: 200px"></td>
            <td><%= meme.uuid %></td>
            <td>
              <div class="d-flex justify-content-between">
                <a href="/memes/<%= meme.uuid %>" class="poke btn btn-success">Show</a>
                <a href="/memes/<%= meme.uuid %>/edit" class="poke btn btn-warning">Edit</a>
                <form action="/memes/<%= meme.uuid %>/delete" method="post">
                  <button type="submit" class="poke btn btn-danger">X</button>
                </form>
              </div>
            </td>
          </tr>
        <% } %>
      </table>
    </div>
  </div>
</div>
